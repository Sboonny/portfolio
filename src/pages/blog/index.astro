---
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";

const posts = await Astro.glob("./posts/*.md");
---

<Layout title="Sboonny | blog">
  <Header />
  {
    posts.map((post) => (
      <article class="bg-slate-400 dark:bg-slate-700 rounded-lg shadow-md p-4 m-6">
        <h2 class="text-2xl dark:text-gray-200 font-bold mb-2">{post.frontmatter.title}</h2>
        <p class="text-gray-700 dark:text-gray-300 mb-4">{post.frontmatter.description}</p>
        <a class="text-blue-500 hover:text-blue-700" href={post.url}>Read more</a>
      </article>
    ))
  }
</Layout>
